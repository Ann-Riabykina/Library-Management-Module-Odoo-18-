<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        RENT VIEWS
        We define:
          - tree(list) view for library.rent
          - form view for library.rent
          - action to open rents
          - menu item under Library
    -->

    <!-- List view for rents -->
    <record id="view_library_rent_tree" model="ir.ui.view">
        <field name="name">library.rent.tree</field>
        <field name="model">library.rent</field>
        <field name="arch" type="xml">
            <list string="Rents">
                <field name="partner_id"/>
                <field name="book_id"/>
                <field name="rent_date"/>
                <field name="return_date"/>
            </list>
        </field>
    </record>

    <!-- Form view for rents -->
    <record id="view_library_rent_form" model="ir.ui.view">
        <field name="name">library.rent.form</field>
        <field name="model">library.rent</field>
        <field name="arch" type="xml">
            <form string="Rent">
                <header>
                    <button name="action_return_book"
                    type="object"
                    string="Return Book"
                    class="btn-primary"
                    invisible="return_date"/>
                </header>
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="book_id"/>
                        <field name="rent_date"/>
                        <field name="return_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action: open list of rents -->
    <record id="action_library_rent" model="ir.actions.act_window">
        <field name="name">Rents</field>
        <field name="res_model">library.rent</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Rents menu -->
    <menuitem id="menu_library_rents"
              name="Rents"
              parent="menu_library_root"
              action="action_library_rent"
              sequence="20"/>
</odoo>
